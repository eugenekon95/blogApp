<!DOCTYPE html>
<html>
  <head>
    <title>BlogApp</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <div class="container-fluid">
    <%= link_to 'Posts',  home_path, class: 'navbar-brand', style: 'margin-left: 5%'%>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
      </ul>
      <div class="form-inline my-2 my-lg-0" style="margin-right: 2rem">
        <% if logged_in? %>
          <%= link_to "Log Out", logout_path, class: "btn btn-secondary btn-sm" , style: "color: white" %>

          <%= link_to "Profile", profile_path, class: "btn btn-danger btn-sm" , style: "color: white" %>
          <%= link_to 'New Post', new_post_path, class: 'btn btn-success btn-sm', role: "button", style: "color: white"   %>
        <% else %>
          <%= link_to "Sign up", signup_path, id: "register", class: "btn btn-secondary btn-sm", style: "color: white" %>

          <%= link_to "Log In", login_path, class: "btn btn-outline-secondary btn-sm" %>

        <% end %>
      </div>
      <%= form_with url: search_posts_path,class: "d-flex", method: :get, local:true do |f|  %>
        <%= f.text_field :q, id: :q, class: "form-control me-2", placeholder:"Search"%>
        <%= f.submit "Search", class: "btn btn-outline-success" %>
      <%end %>
    </div>
  </div>
</nav>
<% if cookies[:views_count].to_i > 4%>
   <%=render'modals/modal'%>
<% end %>
<div class="container">
  <%= yield %>
</div>
  </body>
</html>
