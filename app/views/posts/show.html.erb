<div class='cont show_post'>
  <p id="notice"><%= notice %></p>
  <div>
    <h4>Author:</h4>
    <p><%= @post.author.full_name %></p>
  </div>
  
  <div>
    <h4>Description:</h4>
    <p><%= @post.name %></p>
  </div>
  <div>
    <p class ="text-center text-uppercase" ><%= @post.title %></p>
  </div>
  <div class="d-flex justify-content-center">
    <img src='<%= @post.image %>' class="img-fluid"/>
  </div>
  
  <div>
    <h4>Content:</h4>
    <p><%= @post.content %></p>
  </div>
 
  <br/>
  <div class='btn btn-dark'><%= link_to 'Back', posts_path %></div>
  <div class='btn btn-warning'><%= link_to 'Edit', edit_post_path(@post) %></div> 
  
</div>
<div class='cont add_comment'>
  <h4>New Comment</h4>
  <%= render 'comment_form' %>
</div>
<div class='cont comment_list'>
  <h4>Comments</h4>
  
  <%= render 'comments_list' %>
</div>
