

  <!-- Page Content -->
  <div class="container">
 <p id="notice"><%= notice %></p>
    <div class="row">

      <!-- Post Content Column -->
      <div class="col-lg-12">

        <!-- Title -->
        <h1 class="mt-5 text-center"><%= @post.title %></h1>

        <!-- Author -->
        <p class="lead">
          Posted by <%= @post.author.full_name %>
          
        </p>

        <hr>

        <!-- Date/Time -->
       <i>&#9201; updated &nbsp; <%= distance_of_time_in_words(@post.updated_at, Time.now) %> ago</i>
       <i>&#128065; &nbsp; views <%= @post.views_count %> </i>
       <i>&#9997;&nbsp;comments <%= @post.comments.count %></i>

        <hr>

        <!-- Preview Image -->
        <div class ="d-flex justify-content-center"><%=image_tag(@post.image)%></div>

        <hr>

        <!-- Post Content -->
        <p class="lead"><%= @post.name %></p>
        <p><%= @post.content %></p>
        <hr>
        <div class='btn btn-sm btn-dark'><%= link_to 'Back', posts_path %></div>
        <div class='btn btn-sm btn-info'><%= link_to 'Edit', edit_post_path(@post) %></div> 
        
        <h3 class ="mt-2">Leave a comment</h3>
        <!-- Comments Form -->
        <%= render 'comment_form' %>
       
        <!-- Single Comment -->
       <%= render 'comments_list' %>
       


        

        

      
    </div>
    <!-- /.row -->

  </div>


  



