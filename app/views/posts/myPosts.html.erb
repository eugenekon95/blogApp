
  <p id="notice"><%= notice %></p>
  <h2 class ="mt-5">Posts</h2>
<table class="table table-dark">
<thead>
      <tr>
        <th scope="col"><h4>Title</h4></th>
        <th class='none' scope="col"><h4>Description</h4></th>
        <th class='none' scope="col"><h4>Content</h4></th>
        <th colspan="5"></th>
      </tr>
    </thead>

    <tbody>
      <% @posts.each do |post| %>
        <tr>          
          <td><p><b><%= post.title %></b></p></td>
          <td class='none'><p><%= post.author.email || post.author.full_name%></p></td>
          <td class='none'><p><%= post.content %></p></td>
          <td><div class='btn btn-primary'><%= link_to 'Show', post,role: "button" %></div></td>
           <%if logged_in? && current_author.id == post.author.id %>
          <td><div class='btn btn-info'><%= link_to 'Edit', edit_post_path(post),role: "button" %><td></div> 
          <td><div class='btn btn-danger'><%= link_to 'Delete', post, role: "button", style: "color: white", method: :delete, data: { confirm: 'Are you sure?' } %><td></div> 
             <% end %>
       </tr>
      <% end %>
    </tbody>
  </table>
  <%= link_to 'New Post', new_post_path, class: 'btn btn-success', role: "button", style: "color: white" if logged_in  %>
</div>
